name: Restructure codebase using Sourcery

on:
  push:
    branches: [main]

jobs:
  rebase-with-sourcery:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - uses: sourcery-ai/action@v1
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
